# LWT Database Configuration
# Copy this file to .env and update the values for your environment.
#
# The .env file takes precedence over connect.inc.php if both exist.
# For backward compatibility, connect.inc.php is still supported.

# Database server hostname or IP address
# Examples:
#   localhost (default)
#   127.0.0.1
#   localhost:8889 (for MAMP)
DB_HOST=localhost

# Database username
DB_USER=root

# Database password (leave empty for no password)
DB_PASSWORD=

# Database name
DB_NAME=learning-with-texts

# Database socket (optional, usually not needed)
# Uncomment and set if your MySQL uses a non-standard socket
# DB_SOCKET=/var/run/mysqld/mysqld.sock

# Table prefix (optional)
# Use this if you want to run multiple LWT instances in the same database
# or if you're integrating with another application
# Example: lwt_ would create tables like lwt_words, lwt_texts, etc.
# DB_TABLE_PREFIX=
