<?xml version="1.0"?>
<psalm
    errorLevel="4"
    resolveFromConfigFile="true"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="." />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="node_modules" />
            <!-- Generated/minified assets -->
            <directory name="assets" />
            <!-- Documentation -->
            <directory name="docs" />
            <!-- Build tools -->
            <directory name="src/tools" />
        </ignoreFiles>
    </projectFiles>

    <globals>
        <!-- Database globals from database_connect.php -->
        <var name="$DBCONNECTION" type="mysqli|null" />
        <var name="$tbpref" type="string" />
        <!-- Debug mode from kernel_utility.php -->
        <var name="$debug" type="bool" />
        <!-- Alternative table prefix used in some contexts -->
        <var name="$fixed_tbpref" type="string" />
    </globals>

    <issueHandlers>
        <!--
            Legacy code suppressions:
            These files are being migrated from the old procedural structure to MVC.
            They use global functions and variables that are valid at runtime but
            Psalm cannot track through dynamic includes.
        -->
        <UndefinedGlobalVariable>
            <errorLevel type="suppress">
                <directory name="src/backend/Legacy" />
            </errorLevel>
        </UndefinedGlobalVariable>

        <UndefinedFunction>
            <errorLevel type="suppress">
                <!-- Legacy files call functions defined in session_utility.php -->
                <directory name="src/backend/Legacy" />
            </errorLevel>
        </UndefinedFunction>

        <MissingFile>
            <errorLevel type="suppress">
                <!-- Legacy files may include files that are being reorganized -->
                <directory name="src/backend/Legacy" />
            </errorLevel>
        </MissingFile>

        <!--
            Test files are flagged as unused because they're loaded by PHPUnit,
            not by explicit require/include statements.
        -->
        <UnusedClass>
            <errorLevel type="suppress">
                <directory name="tests" />
            </errorLevel>
        </UnusedClass>

        <!--
            Controller $params are required by the routing interface signature
            even when not used in methods that delegate to legacy includes.
        -->
        <PossiblyUnusedParam>
            <errorLevel type="suppress">
                <directory name="src/backend/Controllers" />
            </errorLevel>
        </PossiblyUnusedParam>
    </issueHandlers>
</psalm>
