{
  "name": "lwt",
  "version": "1.0.0",
  "description": "NPM package for hugofara/LWT, a fork of LWT",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "vite",
    "build": "vite build",
    "build:themes": "node scripts/build-themes.js",
    "build:all": "npm run build && npm run build:themes",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "e2e": "cypress run",
    "docs:dev": "node scripts/docs-pre-build.js && vitepress dev docs-src",
    "docs:build": "node scripts/docs-pre-build.js && vitepress build docs-src",
    "docs:preview": "vitepress preview docs-src"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoFara/lwt.git"
  },
  "keywords": [
    "lwt",
    "language",
    "learning",
    "spaced-repetition",
    "system",
    "web",
    "reader"
  ],
  "author": "lang-learn-guy, hugofara",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/HugoFara/lwt/issues"
  },
  "homepage": "https://github.com/HugoFara/lwt#readme",
  "dependencies": {
    "@yaireo/tagify": "^4.35.6",
    "alpinejs": "^3.15.2",
    "bulma": "^1.0.4",
    "chart.js": "^4.5.1",
    "lucide": "^0.555.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/markdown": "^7.5.1",
    "@types/alpinejs": "^3.13.11",
    "@types/node": "^24.10.1",
    "@types/yaireo__tagify": "^4.27.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-legacy": "^6.0.0",
    "@vitest/coverage-v8": "^4.0.14",
    "cypress": "^15.7.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^6.1.1",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "jsdoc": "^4.0.2",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^6.0.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.14",
    "vue": "^3.5.25"
  }
}
